<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Commencer une pause:" />

    <EditText
        android:id="@+id/edittext_beginning_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex: 2020-03-30 11:10:20" />

    <Button
        android:id="@+id/prefill_beginning_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Préremplir" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:text="Terminer une pause:" />

    <EditText
        android:id="@+id/edittext_finish_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex: 2020-03-30 11:10:20" />

    <Button
        android:id="@+id/prefill_finish_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Préremplir" />

    <Button
        android:id="@+id/validate_pause"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sauvegarder" />

</LinearLayout>